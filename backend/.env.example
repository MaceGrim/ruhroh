# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ruhroh

# Qdrant Vector Store
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_USE_TLS=false

# Supabase Auth
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# LLM Providers
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
MISTRAL_API_KEY=

# RAG Configuration
RUHROH_VECTOR_WEIGHT=0.6
RUHROH_KEYWORD_WEIGHT=0.4
RUHROH_RRF_K=60
RUHROH_ENABLE_FALLBACK=false
RUHROH_DEFAULT_MODEL=gpt-4
RUHROH_EMBEDDING_MODEL=text-embedding-3-small
RUHROH_CHUNK_SIZE=512
RUHROH_CHUNK_OVERLAP=50

# Rate Limiting
RUHROH_RATE_LIMIT_RPM=60
RUHROH_RATE_LIMIT_BURST=10

# File Storage
UPLOAD_DIR=/app/uploads
PROCESSED_DIR=/app/processed
MAX_FILE_SIZE=524288000

# Server
DEBUG=false
LOG_LEVEL=INFO
