# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ruhroh

# Qdrant
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=documents

# Supabase (required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# LLM API Keys (at least OpenAI required)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=
MISTRAL_API_KEY=

# RAG Configuration
RUHROH_VECTOR_WEIGHT=0.6
RUHROH_KEYWORD_WEIGHT=0.4
RUHROH_RRF_K=60
RUHROH_ENABLE_FALLBACK=false
RUHROH_DEFAULT_MODEL=gpt-4
RUHROH_EMBEDDING_MODEL=text-embedding-3-small
RUHROH_CHUNK_SIZE=512
RUHROH_CHUNK_OVERLAP=50

# Rate Limiting
RUHROH_RATE_LIMIT_RPM=60
RUHROH_RATE_LIMIT_BURST=10

# CORS
CORS_ORIGINS=http://localhost:3000

# Application
DEBUG=false
LOG_LEVEL=INFO

# Frontend
VITE_API_URL=http://localhost:8000
